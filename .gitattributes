# Auto-normalize line endings
* text=auto

# Python files should always use LF
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.json text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
